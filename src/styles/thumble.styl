@import 'normalize'

opacity(n)
  zoom 1
  opacity n
  filter unquote('alpha(opacity=' + round(n * 100) + ')')

absolute-center()
  position absolute
  margin auto
  top 0
  left 0
  bottom 0
  right 0

overlay()
  position fixed
  top 0
  right 0
  z-index 10 
  width 100%
  height 100%
  text-align center
  vertical-align middle

btn-basics()
  display inline-block
  transition opacity 0.25s ease
  text-align center
  vertical-align middle
  border 0
  color white // default
  // only used when all mq fail
  margin 0.1rem
  padding 0.1rem 0.4rem
  font-size 0.6rem
  border-radius 0.1rem

btn(n=1)
  font-size round(0.95rem * n,2)
  padding round(0.5rem * n * 0.5, 3)
  margin round(0.04rem * n,2) 
  border-radius round(0.25rem * n * 0.5 * btn-br,2)

box16x9(long)
  width long 
  height round(long / 1.777, 3)

box9x16(long)
  height long 
  width round(long / 1.777, 3)

btn-box()
  absolute-center()
  display inline-block
  text-align center
  border 0
  // only used when no mq is found
  line-height 1.2rem
  height 1.5rem
  width none

btn-p(n=1)
  btn(n)
  line-height round(1.02rem * n, 3)
  height round(1.02rem * n, 3)
  width round(0.913rem * n, 3)

btn-l(n=1)
  btn(n)
  line-height round(0.92rem * n, 3)
  height round(0.92rem * n, 3)
  width round(1.09rem * n * 0.91, 3)

btn-box-p(n=1)
  box9x16(round(8rem * n, 3))
  padding round(0.1rem * n, 3)
  border-radius round(0.25rem * n * 0.5 * btn-box-br,2)

btn-box-l(n=1)
  box16x9(round(8rem * n, 3))
  padding round(0.1rem * n, 3)
  border-radius round(0.25rem * n * 0.5 * btn-box-br,2)

#thumble
  overlay()

#thumble-pad
  btn-box()

.thumble-btn, #thumble-main
  btn-basics()

#thumble-main
  position fixed
  top 0
  right 0
  background rgba(0,0,0,0.24)

#thumble-main.off, #thumble.off
  display none

// more reliable than just transform: scale(n)
media-query(n)
  long = round(n*10em,3)
  short = round(n*5.625em,3)
  port = '(min-height:'+long+') and (min-width:'+short+')'
  land = '(min-width:'+long+') and (min-height:'+short+')'
  scale = round(1.22*n,3)
  @media port
    #thumble-pad
      btn-box-p(scale)
    .thumble-btn
      btn-p(scale)
  @media land
    #thumble-pad
      btn-box-l(scale)
    .thumble-btn
      btn-l(scale)

@import 'thumble-config'

supported-factors = ()
for count in 1 .. mq-count
  factor = 1 + round(factor-increment * count,1)
  push(supported-factors,factor)

// one for the impossibly small
media-query(0.75)

for n in supported-factors
  media-query(n)
