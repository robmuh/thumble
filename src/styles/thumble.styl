// Thumble Styles
@import 'normalize'

opacity(n)
  zoom 1
  opacity n
  filter unquote('alpha(opacity=' + round(n * 100) + ')')

#thumble
  background rgba(0,0,0,0.0)
  position fixed
  top 0
  right 0
  z-index 10 
  width 100%
  vertical-align middle
  padding 0.1em
  text-align center
  vertical-align middle
  z-index 11 

#thumble-pad
  display inline-block
  text-align center
  vertical-align middle
  border-radius 0.6em
  background rgba(90,90,90,0.84)
  padding-top 0.2em

#thumble-main, .thumble-btn
  display inline-block
  background rgba(90,90,90,0.84)
  color white
  border-radius 0.25em
  border 0
  text-decoration none !important
  vertical-align middle
  text-align center
  transition opacity 0.25s ease

.thumble-btn:hover, #thumble-main:hover
  background rgba(0,0,0,0.84)

#thumble-main
  background rgba(0,0,0,0.24)

#thumble-pad.off, #thumble-main.off
  display none

/*--- mostly zurb foundation based media queries ---*/

// tiny <=320px
@media only screen
  #thumble-pad
    width 19.4em
    height 25em
  .thumble-btn
    line-height 2em
    height 2em
    font-size 2.75em
    width 2em
    padding 0.065em
    margin 0.065em

// xsmall >320px (safer than 480)
//@media only screen and (min-width: 20em)

// small >450px
@media only screen and (min-width: 28.125em)
  #thumble-pad
    height 18.8em
    width 25.4em

// medium >640px
@media only screen and (min-width: 40em)
  #thumble-pad
    width 37.8em
    height 12.6em

// large >1024px
@media only screen and (min-width: 64.063em)
  #thumble
    text-align right
    padding-right 0.2em
  .thumble-btn
    line-height 1.9em
    height 1.9em
    font-size 2.50em
    width 1.9em
    padding 0.03em
    margin 0.065em 
  #thumble-pad
    width 63.1em
    height 5.6em

// xlarge >1440px
@media (min-width: 90.063em)
  .thumble-btn
    line-height 2em
    height 2em
    font-size 2.75em
    width 2em
    padding 0.065em
    margin 0.065em
  #thumble-pad
    width 75.1em
    height 6.5em

