@import 'normalize'

[id*="off"], [class*="off"]
  display none

opacity(n)
  zoom 1
  opacity n
  filter unquote('alpha(opacity=' + round(n * 100) + ')')

overlay()
  position fixed
  top 0
  right 0
  z-index 10 
  width 100%
  height 100%
  text-align center
  vertical-align middle

btn(n=1)
  display inline-block
  transition opacity 0.25s ease
  text-align center
  vertical-align middle
  border 0
  color white
  font-size (1rem * n)
  padding (0.5rem * n * 0.5)
  margin (0.04rem * n) 
  border-radius 0.25rem

box16x9(long)
  width long 
  height (long / 1.777)

box9x16(long)
  height long 
  width (long / 1.777)

btn-box()
  display inline-block
  text-align center
  margin 0
  border 0

btn-p(n=1)
  btn(n)
  line-height (1.03rem * n)
  height (1.03rem * n )
  width (0.92rem * n )

btn-l(n=1)
  btn(n)
  line-height (0.921rem * n)
  height (0.921rem * n )
  width (1.02rem * n)

btn-box-p(n=1)
  btn-box()
  box9x16((8rem * n))
  padding (0.1rem * n)
  border-radius 0.3rem

btn-box-l(n=1)
  btn-box()
  box16x9((8rem * n))
  padding (0.1rem * n)
  border-radius 0.3rem

#thumble
  overlay()

@media only screen
  #thumble-pad
    btn-box-p(1)
  .thumble-btn
    btn-p(1)

@media only screen and (min-width: 9em)
  #thumble-pad
    btn-box-l(1)
  .thumble-btn
    btn-l(1)

@media only screen and (min-height: 11em) and (min-width: 6em)
  #thumble-pad
    btn-box-p(1.3)
  .thumble-btn
    btn-p(1.3)

@media only screen and (min-width: 12.5em)
  #thumble-pad
    btn-box-l(1)
  .thumble-btn
    btn-l(1)


